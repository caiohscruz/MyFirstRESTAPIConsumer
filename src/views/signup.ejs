<!-- Inclui head -->
<%- include("./partials/header.ejs") %>

<body>

    <div class="container">

        <div class="card">

            <div class="card-header">
                <h2>Cadastro de usuário</h2>
            </div>

            <div class="card-body">

                <form method="POST" action="/users/save">
                    <label for="title">Username</label>
                    <input type='text' class="form-control" id="username" name="username"
                        placeholder="Defina um nome de usuário">
                    <br>
                    <label for="title">Senha</label>
                    <input type='password' class="form-control" id="password" name="password"
                        placeholder="Digite sua senha">
                    <br>
                    <label for="title">E-mail</label>
                    <input type='text' class="form-control" id="email" name="email" placeholder="Informe seu e-mail">
                    <br>
                    <button type="submit" class="btn btn-success btn-block">Cadastrar</button>
                </form>
                <div style="text-align: center;">
                    <br>
                    <a class="dropdown-item" href="/">Já possui cadastro? Faça seu login</a>
                </div>
            </div>

        </div>

    </div>
    
    <input type="hidden" id="restAPI" value="<%= restAPI %>">

</body>

<!-- Inclui footer -->
<%- include("./partials/footer.ejs") %>

<script>
    const restAPI = document.getElementById("restAPI").value
</script>